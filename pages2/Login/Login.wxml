<view class="container">
  <view class="header">
    <text class="title">登录</text>
  </view>
  <view class="card">
    <view class="form-item">
      <input id="username" placeholder="请输入账号" bindinput="handleInputChange" class="input-field" />
      <text class="input-icon">📧</text>
    </view>
    <view class="form-item">
      <input id="password" placeholder="请输入密码" bindinput="handleInputChange" password="true" class="input-field" />
      <text class="input-icon">🔒</text>
    </view>
    <view class="form-item">
      <button bindtap="handleLogin" class="login-button">登录</button>
    </view>
    <view class="footer">
      <text class="footer-text">还没有账号？<a href="/register">注册</a></text>
    </view>
  </view>
</view>
