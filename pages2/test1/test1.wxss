/* pages/test1/test1.wxss */
page {
  background-color: #ebffe5; /* 浅绿色背景 */
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  padding: 20px;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
  background-color: #ff6600;
  border-radius: 10px;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  color: #ffffff;
  font-weight: bold;
}

.swiper-container {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
  border-radius: 10px;
  overflow: hidden;
}

.swiper-item image {
  width: 100%;
  height: 100%;
}

.features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.feature {
  flex: 2;
  background-color: #ffcba9;
  border-radius: 20px;
  border: 2px solid #ee680e; /* 增加边框 */
  padding: 30px;
  text-align: center;
  margin: 0 15px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.feature:hover {
  transform: scale(1.05);
}

.feature-text {
  font-size: 18px;
  color: #333333;
}

.about {
  background-color: #ffffff;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

.about-text {
  font-size: 20px;
  color: #ff6600;
  font-weight: bold;
  margin-bottom: 10px;
}

.about-description {
  font-size: 16px;
  color: #666666;
  line-height: 1.5;
}

.video-container {
  width: 100%;
  height: 200px;
  margin-bottom: 20px;
}

video {
  width: 100%;
  height: 100%;
  border-radius: 10px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* 阴影效果 */
}

.footer {
  text-align: center;
  padding: 10px;
  background-color: #333333;
  border-radius: 10px;
  margin-top: 20px;
}

.footer-text {
  font-size: 14px;
  color: #ffffff;
}
