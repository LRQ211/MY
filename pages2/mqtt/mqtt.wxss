.container {
  padding: 20px;
  background-color: #e0f7da; /* 浅绿色背景 */
  min-height: 100vh; /* 使背景色覆盖整个页面 */
}
.table {
  border-radius: 10px; /* 设置椭圆形 */
  width: 80%; /* 自定义宽度 */
  margin: 10px auto; /* 居中 */
  background-color: #fffacd; /* 设置淡黄色背景 */
  padding: 10px; /* 添加内边距 */
}

.table-header,
.table-row {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
  border-bottom: none; /* 去除表格内的行线 */
}

.search-bar {
  display: flex;
  left: 20%;

  width: 80%;
  justify-content: space-between;
  margin-bottom: 6px;
  background-color: #ffd0cd; /* 淡黄色背景，对应图片中的黄色 */
  padding:6px;
  border-radius: 4px;
}

.search-bar input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-right: 10px;
  background-color: #fffacd; /* 淡黄色背景，对应图片中的黄色 */
}

.search-bar button {
  padding: 10px 20px;
  background-color: #00c3ff;
  color: white;
  border: none;
  border-radius: 4px;
}
.feedback-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}
.feedback-title {
  font-size: 24px;
  font-weight: bold;
  margin-right: 10px; /* 间距 */
  color: #388e3c; /* 绿色字体 */
}
.image {
  max-width: 50px;
  max-height: 60px; 
}